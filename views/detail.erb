<section>
  <h2><%= @title %></h2>
  <% # TODO: XSS 的に良くないはず %>
  <p><%= h(@content).gsub(/\r\n|\n|\r/, "<br>") %></p>

  <form method="get" action="/detail/<%= @id %>/edit">
